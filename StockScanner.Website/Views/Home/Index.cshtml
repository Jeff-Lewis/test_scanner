<script>
    $(function () {
        var stop = false;

        $(".fadeNext").click(function () {
            $(this).parents('.toggle_header').next('.fader').fadeSliderToggle()
            return false;
        })


        $.imageTick.logging = true;

        $("input[name='period_type']").imageTick({
            tick_image_path: "/Content/images/sel.png",
            no_tick_image_path: "/Content/images/unsel.png",
            image_tick_class: "period_type"
        });

        $("input[name='compare_type']").imageTick({
            tick_image_path: "/Content/images/sel_small.png",
            no_tick_image_path: "/Content/images/unsel_small.png",
            image_tick_class: "compare_type"
        });

        $("input[name='compare_type2']").imageTick({
            tick_image_path: "/Content/images/sel_small.png",
            no_tick_image_path: "/Content/images/unsel_small.png",
            image_tick_class: "compare_type2"
        });

    });
	</script>

